<?xml version="1.0"?>
<mujoco>
  
  <option timestep="0.01" gravity="0 0 -9.81"/>
  
  <worldbody>
    
    <geom name="floor" type="plane" size="5 5 0.1" rgba="1 1 1 1"/>
    
    <geom name="line" type="box" size="0.05 3 0.001" pos="0 0 0.01" rgba="0 0 0 1"/>

    <body name="robot" pos="0 3 0.1">
      <freejoint/>

      <geom type="box" size="0.1 0.2 0.05" rgba="1 0 0 1" mass="10"/>

      <geom name="front wheel" pos="0 -0.15 -0.07" type="sphere" size=".02" condim="1" priority="1"/>

      <camera name="camera_down" pos="0 -0.15 -0.02" euler="90 0 0" 
              fovy="30" resolution="64 64"/>
      
      <body name="left_wheel" pos="-0.12 0.1 -0.05">
        <joint name="left_wheel_joint" type="hinge" axis="1 0 0"/>
        <geom type="cylinder" size="0.05 0.02" rgba="0.3 0.3 0.3 1" mass="0.1" euler="0 90 0"/>
      </body>
      
      <body name="right_wheel" pos="0.12 0.1 -0.05">
        <joint name="right_wheel_joint" type="hinge" axis="1 0 0"/>
        <geom type="cylinder" size="0.05 0.02" rgba="0.3 0.3 0.3 1" mass="0.1" euler="0 90 0"/>
      </body>
    </body>
  </worldbody>

  <tendon>
    <fixed name="forward">
      <joint joint="left_wheel_joint" coef=".5"/>
      <joint joint="right_wheel_joint" coef=".5"/>
    </fixed>
    <fixed name="turn">
      <joint joint="left_wheel_joint" coef="-.5"/>
      <joint joint="right_wheel_joint" coef=".5"/>
    </fixed>
  </tendon>

  <actuator>
    <motor name="forward" tendon="forward" ctrlrange="-1 1"/>
    <motor name="turn" tendon="turn" ctrlrange="-1 1"/>
  </actuator>
</mujoco>